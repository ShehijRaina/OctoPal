{
  "manifest_version": 3,
  "name": "OctoPal",
  "version": "0.1.0",
  "description": "Identify bots and misinformation on social media",
  "icons": {
    "16": "images/octopal-logo.png",
    "48": "images/octopal-logo.png",
    "128": "images/octopal-logo.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/octopal-logo.png",
      "48": "images/octopal-logo.png",
      "128": "images/octopal-logo.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.twitter.com/*",
    "https://*.x.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*",
        "https://*.x.com/*"
      ],
      "js": ["content.js"]
    }
  ]
} 